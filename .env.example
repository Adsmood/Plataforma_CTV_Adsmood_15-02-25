# URLs de servicios
VITE_API_URL=https://adsmood-ctv-api.onrender.com
VITE_ASSETS_URL=https://adsmood-ctv-assets.onrender.com
VITE_FRONTEND_URL=https://ctv-render-13-02.onrender.com

# Configuración del entorno
NODE_ENV=production
PORT=3000

# Base de datos
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@${DB_HOST}:5432/adsmood_ctv_prod
DATABASE_POOL_SIZE=20

# Configuración de servicios
VITE_VAST_ENDPOINT=/vast
VITE_TRACKING_ENDPOINT=/track
VITE_INTERACTIVE_ENDPOINT=/interactive

# Configuración de almacenamiento
VOLUME_PATH=/data
STORAGE_SIZE=10GB

# Configuración de tracking
TRACKING_ENABLED=true
TRACKING_BATCH_SIZE=100
TRACKING_FLUSH_INTERVAL=60000

# Configuración de cache
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Configuración de seguridad
JWT_SECRET=${JWT_SECRET}
CORS_ORIGINS=https://ctv-render-13-02.onrender.com,https://adsmood-ctv-assets.onrender.com

# Configuración de analytics
ANALYTICS_ENABLED=true
GRAFANA_URL=
GRAFANA_API_KEY=

# Configuración de exportación
MAX_EXPORT_SIZE=1073741824 # 1GB
EXPORT_TIMEOUT=300000 # 5 minutos
VIDEO_BITRATE=15000000 # 15 Mbps
AUDIO_BITRATE=192000 # 192 kbps

# Configuración de logs
LOG_LEVEL=info
LOG_FORMAT=json

# Configuración de métricas
METRICS_ENABLED=true
METRICS_PREFIX=adsmood_ctv
PROMETHEUS_ENABLED=true

# Frontend
REACT_APP_API_URL=https://adsmood-ctv-api.onrender.com
REACT_APP_ASSETS_URL=https://adsmood-ctv-assets.onrender.com 